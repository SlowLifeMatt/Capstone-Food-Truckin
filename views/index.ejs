<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head.ejs') %>
</head>
<style>
.img{
    width:400px;
    height: 300px;
}


</style>

<body>
    <% Truck.forEach(Truck => { %>
    <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src=<%= Truck.img %>>
              <span class="card-title"><%=Truck.name %></span>
            </div>
            <div class="card-content">
              <p><%= Truck.info %></p>
            </div>
            <div class="card-action">
              <a href="/truck/<%=Truck.id%>">Link to the Truck Page</a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>

</body>
</html>