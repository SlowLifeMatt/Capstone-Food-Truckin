<body>
    <% Truck.forEach(Truck => { %>
    <div class="row">
        <div class="col l4 m4 s12">
          <div class="card center col l12 s12 m12">
            <div class="card-image">
              <img src=<%= Truck.img %>>
              <span class="card-title gray-text"></span>
            </div>
            <div class="card-content center">
                <p class="truck-name"><%=Truck.name %></p>
              <p><%= Truck.info %></p>
            </div>
            <div class="card-action">
              <a href="/<%=Truck.id%>">Link to the Truck Page</a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
      

</body>
<footer>
    <%-include('./partials/footer.ejs') %>
</footer>
</html>