<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<style>

</style>


<body>
    <div class="row">
        <form class="col s12" action="/<%=Truck.id%>?_method=PUT" method="POST">
          <div class="row">
            <div class="input-field col s6">
              <input id="edit" type="text" name="name" value="<%=Truck.name%>" class="validate">
              <label for="name">Truck Name</label>
            </div>
            <div class="input-field col s6">
              <input id="edit" type="text" name="img" value="<%=Truck.img%>" class="validate">
              <label for="img">Image Link</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s1">
              <input id="edit" type="text" name="avgprice" value="<%=Truck.avgprice%>" class="validate">
              <label for="avgprice">Average Price</label>
            </div>
            <div class="row">
                <div class="input-field col s6">
                  <input id="edit" type="text" name="link" value="<%=Truck.link%>" class="validate">
                  <label for="link">Link to Food Truck website</label>
                </div>
                <div class="input-field col s12">
                    <input id="edit" type="text" name="info" value="<%=Truck.info%>" class="validate">
                    <label for="link">About the Food Truck</label>
                  </div>
                  <div class="input-field col s6">
                    <input id="edit" type="text" name="img1" value="<%=Truck.img1%>" class="validate">
                    <label for="link">Food Image 1</label>
                  </div>
                  <div class="input-field col s6">
                    <input id="edit" type="text" name="img2" value="<%=Truck.img2%>" class="validate">
                    <label for="link">Food Image 2</label>
                  </div>
                  <div class="input-field col s6">
                    <input id="edit" type="text" name="img3" value="<%=Truck.img3%>" class="validate">
                    <label for="link">Food Image 3</label>
                  </div>
          </div>

          </div>
          
          <h2>  <button class="btn waves-effect waves-light" type="submit" name="action" value="Submit Changes">Submit Changes
            <i class="material-icons right">send</i>
          </button></h2>
          </div>
        </form>
      </div>
    <script type="text/javascript" src="js/materialize.min.js"></script>
</body>
<footer>
    <%-include('./partials/footer.ejs') %>
</footer>
</html>